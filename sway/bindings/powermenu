
#
# powermenu
#
set $powermenu p_󰐥 h_󰐦  r_󰜉  s_󰒲  l_󰍃
mode "$powermenu" {
    bindsym p exec 'shutdown now'

    bindsym h exec 'systemctl hibernate', mode "default"
    
    bindsym r exec 'systemctl reboot'
    bindsym s exec 'systemctl suspend', mode "default"
    bindsym l exec 'swaymsg exit', mode "default"

    # bindsym 6 exec "swaylock -f -c 000000 -i $wallpaper", mode "default"

# back to normal: Enter or Escape
    bindsym Return mode "default"
    bindsym Escape mode "default"
}

bindsym Ctrl+Alt+Delete mode "$powermenu"

bindsym $mod+Escape exec 'gtklock -d'