
include /etc/sway/config.d/*

# exec dbus-update-activation-environment --systemd DISPLAY WAYLAND_DISPLAY SWAYSOCK


# settings
set {
    # Primary mod key.
    # Mod4 is Meta key, Mod1 is Alt.
    $mod Mod4

    # Add Vim key support
    $left h
    $down j
    $up k
    $right l

    # Default terminal emulator
    $term alacritty

    # wallpaper
    $fallback_wallpaper /usr/share/backgrounds/sway/Sway_Wallpaper_Blue_1920x1080.png

    # random wallpaper on start up
    $wallpaper_dir ~/.wallpapers/

    $screenshot_path ~/.screenshots/ps_$(date +"%Y%m%d%H%M%S").jpg
}

# select the wallpaper here
# if wallpaper_dir is empty then use the fallback_wallpaper
set $_wallpaper_dir $(if [[ -d $wallpaper_dir && $(ls $wallpaper_dir) ]]; then echo $wallpaper_dir ;else echo $fallback_wallpaper; fi)
set $wallpaper $(find "$_wallpaper_dir" -maxdepth 1 -type f | shuf -n 1)


### Output configuration
#
#
# Example configuration:
#
#   output HDMI-A-1 resolution 1920x1080 position 1920,0
#
# You can get the names of your outputs by running: swaymsg -t get_outputs
output HDMI-A-1 resolution 1920x1080@75Hz subpixel rgb scale_filter smart position 0,0
output eDP-1 resolution 1920x1080@60Hz subpixel rgb scale_filter smart allow_tearing on

# workspace 1 output HDMI-A-1

include ./bindings/basic

# input
# Enable numlock by default
input type:keyboard xkb_numlock enabled
input type:touchpad {
    dwt enabled
    tap enabled
    natural_scroll enabled
}

input type:mouse {
    accel_profile "flat"
}

# waybar
bar {
    swaybar_command waybar
}

# wallpaper
output * bg $wallpaper fill
bindsym $mod+o output * bg $wallpaper fill

include ./ui/application_defaults

include ./autostarts
